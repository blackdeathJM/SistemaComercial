{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2017",
        "module": "es2020",
        "lib": [
            "es2020",
            "dom",
            "esnext.asynciterable"
        ],
        "paths": {
            "@s-fuse/*": [
                "@fuse/*",
                "@fuse/animations/*",
                "@fuse/components/*",
                "@fuse/directives/*",
                "@fuse-lib/*",
                "@fuse/pipes/*",
                "@fuse/services/*",
                "@fuse/tailwind/*",
                "@fuse/validators/*",
                "@fuse/version"
            ],
            "@s-app/*": [
                "app/*",
                "app/core/*",
                "app/layout/*",
                "app/mock-api/*",
                "app/modules/*",
            ],
            "@s-directives/*": [ "directives/*" ],
            "@s-ng-material/*": [ "ng-material/*" ],
            "@s-environments/*": [ "environments/*" ],
            "@s-apollo/*": [ "apollo/*" ],
            "@s-shared/*": [ "Shared/*" ],
            "@s-NGXS/*": [ "NGXS/*" ]
        }
    },
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false
    }
}
