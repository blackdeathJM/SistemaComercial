{
    "version": 2,
    "name": "sistema-comercial",
    "alias": "siardog-api",
    "builds": [
        { "src": "/dist/apps/api/main.js", "use": "@now/node" },
        { "src": "/dist/apps/sistema-comercial/*", "use": "@now/static" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/dist/apps/api/main.js" },
        { "handle": "filesystem" },
        { "src": "/assets/(.*)", "dest": "/dist/apps/sistema-comercial/assets/$1"},
        { "src": "/(.*).(js|css|ico)", "dest": "/dist/apps/sistema-comercial/$1.$2" },
        { "src": "/(.*)", "dest": "/dist/apps/sistema-comercial/index.html" }
    ]
}
